/**
 * Problem: Leetcode287. Find the Duplicate Number
 * Source: https://leetcode.com/problems/find-the-duplicate-number/description/
*/

class Solution {
    public int findDuplicate(int[] nums) {
        // Use a HashSet to detect first repeated number
        HashSet<Integer> set = new HashSet<>();
        
        for (int n : nums) {
            // If already in set, that's the duplicate
            if (set.contains(n)) {
                return n;
            }
            // Otherwise, add to set
            set.add(n);
        }
        
        // According to problem constraints there is always one duplicate
        // We should never reach here. Return something dummy (won't be used).
        return -1;  
    }
}
