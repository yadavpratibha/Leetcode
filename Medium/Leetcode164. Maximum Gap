/**
 * Problem: Leetcode13. 164. Maximum Gap
 * Source: https://leetcode.com/problems/maximum-gap/description/
*/

class Solution {
    public int maximumGap(int[] nums) {
        if(nums.length<=1){
            return 0;
        }

        Arrays.sort(nums);
        int ans=0;
        for(int i=1;i<nums.length;i++){
            int diff=nums[i]-nums[i-1];
            ans=Math.max(ans,diff);
        }
        return ans;
    }
}
