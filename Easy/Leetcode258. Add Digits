/**
 * Problem: 258. Add Digits
 * Source: https://leetcode.com/problems/add-digits/description/
 */

//DIGITAL ROOT

class Solution {
    public int addDigits(int num) {
        return 1+((num-1)%9);
    }
}

//---------------------OR-----------------------------

class Solution {
    public int addDigits(int num) {
        if(num<10) return num;
        
        int ans=0;
        while(num>=10){
            ans=sumOfDigits(num);
            num=ans;
        }
        return ans;
    }

    public int sumOfDigits(int num){
        int sum=0;
        while(num>0){
            sum+=num%10;
            num/=10;
        }
        return sum;
    }
}
